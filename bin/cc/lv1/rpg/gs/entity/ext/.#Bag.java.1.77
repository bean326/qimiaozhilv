		buff.writeInt(location);
		buff.writeInt(id);
		buff.writeInt(type);
		buff.writeInt(count);
		target.getNetConnection().sendMessage(new SMsg(SMsg.S_SET_PLAYER_SHORTCUT_BAR_COMMAND,buff));
