	public int teamExp(int exp)
	{
		int result = 0;//
		if(team == null)
			result = exp;
		else
		{
			PlayerController[] players = team.getPlayers();

			if(players.length == 2)
				exp = exp * 120/100;
			else if(players.length == 3)
				exp = exp * 130/100;
			else if(players.length == 4)
				exp = exp * 140/100;
			else if(players.length == 5)
				exp = exp * 150/100;

			int count = 0;
			for(int i = 0; i < players.length; i++)
			{
				count += players[i].getPlayer().level;
			}

			result = (int) (exp * ((double)player.level/count));//按照等级比例分配
			
			if(team.isLeader(this))//是队长的话额外再获得10%
			{
				result += exp * 10/100;
			}
			FriendList fl = (FriendList) player.getExtPlayerInfo("friendList");
			int friendCount = 0;
			for (int i = 0; i < players.length; i++) 
			{
				if(players[i].getID() == getID())
					continue;
				if(fl.isFriend(players[i]))
					friendCount++;
			}
			if(friendCount == 1)//加上自己就是2个人互为好友
				result += exp * 10/100;
			else if(friendCount == 2)//加上自己就是3个人互为好友
				result += exp * 15/100;
			else if(friendCount == 3)//加上自己就是4个人互为好友
				result += exp * 20/100;
			else if(friendCount == 4)//加上自己就是5个人互为好友
				result += exp * 25/100;
			
			int familyCount = 0;
			for (int i = 0; i < players.length; i++)
			{
				if(players[i].getPlayer().familyId == player.familyId && player.familyId != 0)
					familyCount++;
			}
			if(friendCount == 2)//加上自己就是2个人为同一家族
				result += exp * 5/100;
			else if(friendCount == 3)//加上自己就是3个人为同一家族
				result += exp * 8/100;
			else if(friendCount == 4)//加上自己就是4个人为同一家族
				result += exp * 10/100;
			else if(friendCount == 5)//加上自己就是5个人为同一家族
				result += exp * 15/100;
			//夫妻关系暂时没有
			
		}
		int random = (int) (Math.random() * 100);
		if(random <= player.getBaseInfo().expAddRate && player.getBaseInfo().expAddRate != 0)
			result += exp * 0.2;
		return result;
	}
	
