	/**
	 * 检查单次释放技能的CD时间
	 * @param cdTimer
	 * @return
	 */
	public boolean checkWGcdTimer(int cdTimer)
	{
		long time = netConnection.getPingTime();
		
//		int speed = cdTimer == 0 ? 
//				player.getBaseInfo().speed 
//				: cdTimer-300;
		
//		System.out.println(currentTimeMsg - player.getBaseInfo().speed);
		if(time < player.getBaseInfo().speed + currentTimeMsg - 300)
		{
			if(++wgCount >= 2)
			{
				close();
				MainFrame.println("account speed : "+player.accountName+" use speed wg : "+wgCount);
				return false;
			}
			
			if(wgCount != 1)
			{
				return true;
			}
		}
		if(cdTimer != 0)
		{
			wgCount = 0;
			if(time < cdTimer + currentTimeMsg - 200)
			{
				if(++wgCount >= 2)
				{
					close();
					MainFrame.println("account cdTimer : "+player.accountName+" use speed wg : "+wgCount);
					return false;
				}
				
				if(wgCount != 1)
				{
					return true;
				}
			}
		}
		currentTimeMsg = time;
		return true;
	}
	
	public boolean isEsc()
	{
		long time = netConnection.getPingTime();
		
		if(player.escTimer == 0)
		{
