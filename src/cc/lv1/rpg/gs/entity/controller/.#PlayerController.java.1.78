     */
	public void clientMessageChain(AppMessage msg)
	{
		int type = msg.getType();
		
		if(type == SMsg.C_PLAYER_INFO_COMMAND)
		{
			sendInfo();
		}
		else if(type == SMsg.C_PLAYER_ONKEYMOVE_COMMAND)
