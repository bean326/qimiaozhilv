	public void setAtrocity()
	{
		int at = player.atrocity;
		if(at >= 0 && at < 40)
			at += 100;
		else if(at >= 40 && at <  90)
			at += 150;
		else if(at >= 90 && at <  200)
			at += 200;
		else if(at >= 200 && at <  400)
			at += 300;
		else if(at >= 400 && at <  600)
			at += 450;
		else if(at >= 600 && at <  1200)
			at += 650;
		else if(at > 1200)
			at += 1200;
		
		player.atrocity = at;
		if(player.atrocity > 1200)
			player.atrocity = 1200;
	}
	
	
