	/**
	 * 领取宝箱
	 */
	public void getFreeBox()
	{
		if(player.level / 10 <= player.boxCount || player.level >= 60)
		{
			sendAlert(ErrorCode.ALERT_BOX_GET_ERROR);
			return;
		}
		Bag bag = (Bag) player.getExtPlayerInfo("bag");
		Goods goods = (Goods) DataFactory.getInstance().getGameObject(800000);
		if(goods == null)
			return;
		int count = player.level/10 - player.boxCount;
		if(bag.getNullCount() < 3 * count)
		{
			sendAlert(ErrorCode.ALERT_TASK_AWA_BAG_NOT_ENOUGH);
			return;
		}
		for (int j = 0; j < count; j++) 
		{
			for (int i = 0; i < 3; i++)
			{
				Goods newGoods = (Goods) Goods.cloneObject(goods);
				newGoods.objectIndex = worldManager.getDatabaseAccessor().getGoodsObjIndex();
				bag.sendAddGoods(this, newGoods);
			}
			player.boxCount++;
		}
	}
	
	
