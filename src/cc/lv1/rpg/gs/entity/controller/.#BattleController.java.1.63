			PlayerController everyone = (PlayerController)playerList.get(i);
			PlayerBattleTmp pbt = (PlayerBattleTmp) everyone.getAttachment();
			removeEffect(pbt.getEffectList(),pbt);
			removeHaloEffect(pbt.getBuffBox().getHaloList(),pbt);
