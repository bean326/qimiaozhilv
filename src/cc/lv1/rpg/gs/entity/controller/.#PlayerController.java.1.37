	private void checkLevelUp()
	{
		if(expObj == null)
		{
			expObj = getExpByLevel(player.level+1);
			
			if(expObj == null)
				return;
		}
		
		if(expObj.checkIsLevelUp(player))
		{
			levelUp();
			checkLevelUp();
		}
	}
	
	private void levelUp()
	{
		player.level ++;
		expObj = getExpByLevel(player.level+1);
		player.requireExp += expObj.levelExp;
		
		player.initial();
		
		checkChooseCamp();
	}
	
	/**
	 * 检测玩家等级是否到了应该选择阵营的时候
	 */
	public void checkChooseCamp()
	{
		if(player.level >= 20 && player.camp == 0)
		{
			campState = 1;
			ByteBuffer buffer = new ByteBuffer(1);
			buffer.writeByte(0);
			netConnection.sendMessage(new SMsg(SMsg.S_PLAYER_CAMP_SET_COMMAND,buffer));
		}
	}

	private Exp getExpByLevel(int lv)
	{
		Map expMap = (Map)DataFactory.
		getInstance()
		.getAttachment(DataFactory.ATTACH_EXP);
		return (Exp)expMap.get(lv);
	}
	
	public int teamExp(int exp)
	{
		int result = 0;//
		if(team == null)
			result = exp;
		else
		{
			PlayerController[] players = team.getPlayers();

			if(players.length == 2)
				exp = exp * 120/100;
			else if(players.length == 3)
				exp = exp * 130/100;
			else if(players.length == 4)
				exp = exp * 140/100;
			else if(players.length == 5)
				exp = exp * 150/100;

			int count = 0;
			for(int i = 0; i < players.length; i++)
			{
				count += players[i].getPlayer().level;
			}

			result = (int) (exp * ((double)player.level/count));//按照等级比例分配
			
			if(team.isLeader(this))//是队长的话额外再获得10%
			{
				result += exp * 10/100;
			}
			FriendList fl = (FriendList) player.getExtPlayerInfo("friendList");
			int friendCount = 0;
			for (int i = 0; i < players.length; i++) 
			{
				if(players[i].getID() == getID())
					continue;
				if(fl.isFriend(players[i]))
					friendCount++;
			}
			if(friendCount == 1)//加上自己就是2个人互为好友
				result += exp * 10/100;
			else if(friendCount == 2)//加上自己就是3个人互为好友
				result += exp * 15/100;
			else if(friendCount == 3)//加上自己就是4个人互为好友
				result += exp * 20/100;
			else if(friendCount == 4)//加上自己就是5个人互为好友
				result += exp * 25/100;
			
			int familyCount = 0;
			for (int i = 0; i < players.length; i++)
			{
				if(players[i].getPlayer().familyId == player.familyId && player.familyId != 0)
					familyCount++;
			}
			if(friendCount == 2)//加上自己就是2个人为同一家族
				result += exp * 5/100;
			else if(friendCount == 3)//加上自己就是3个人为同一家族
				result += exp * 8/100;
			else if(friendCount == 4)//加上自己就是4个人为同一家族
				result += exp * 10/100;
			else if(friendCount == 5)//加上自己就是5个人为同一家族
				result += exp * 15/100;
			//夫妻关系暂时没有
		}
		return result;
	}
	
